---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../utils/formatDate';

type Props = CollectionEntry<'notes'>['data'];

const { title, pubDate, tags } = Astro.props;
---

<BaseLayout title={title} description={`A quick note about ${title}`}>
  <article class="prose prose-lg dark:prose-invert max-w-none">
    <header class="mb-6 not-prose">
      <h1 class="text-3xl font-bold mb-3">{title}</h1>
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
        <time datetime={pubDate.toISOString()}>
          {formatDate(pubDate)}
        </time>
        {tags && tags.length > 0 && (
          <div class="flex gap-2">
            {tags.map((tag) => (
              <span style="background: var(--color-bg-secondary); color: var(--color-accent); border: 1px solid var(--color-border);" class="px-2.5 py-1 rounded text-xs font-medium">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>
    <slot />
  </article>
  <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-800">
    <a href="/notes" class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
      ‚Üê Back to notes
    </a>
  </div>
</BaseLayout>

<style>
  article :global(h2) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  article :global(h3) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  article :global(p) {
    margin-bottom: 0.75rem;
  }

  article :global(ul), article :global(ol) {
    margin-bottom: 0.75rem;
    margin-left: 1.5rem;
  }

  article :global(li) {
    margin-bottom: 0.25rem;
  }

  article :global(code) {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  :root.dark article :global(code) {
    background-color: #1f2937;
  }

  article :global(pre) {
    background-color: #f3f4f6;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 0.75rem;
  }

  :root.dark article :global(pre) {
    background-color: #111827;
  }

  article :global(pre code) {
    background-color: transparent;
    padding: 0;
  }
</style>
