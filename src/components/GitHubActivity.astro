---
const GITHUB_USERNAME = 'swmcc';
---

<section class="max-w-6xl mx-auto mt-24">
  <div class="card animate-slide-in-left" style="animation-delay: 450ms;">
    <!-- Ribbon overlay - top left -->
    <div class="absolute top-0 left-0 ribbon-top-left">
      <span style="background: var(--color-accent); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
        Recent Activity
      </span>
    </div>

    <div class="mt-8">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-400/30 to-pink-400/30 flex items-center justify-center">
          <svg class="w-8 h-8" style="color: var(--color-accent);" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <div>
          <h2 style="color: var(--color-text-heading);" class="text-2xl font-bold">Recent Commits</h2>
          <p style="color: var(--color-text-secondary);" class="text-sm">Latest activity from GitHub</p>
        </div>
      </div>

      <div id="github-activity-content">
        <p style="color: var(--color-text-muted);" class="text-sm italic">
          Loading activity...
        </p>
      </div>

      <div class="mt-6 text-center">
        <a
          href={`https://github.com/${GITHUB_USERNAME}`}
          target="_blank"
          rel="noopener noreferrer"
          style="color: var(--color-accent);"
          class="text-sm font-semibold inline-flex items-center gap-1 hover:opacity-80 transition-opacity"
        >
          View all activity on GitHub
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ GITHUB_USERNAME }}>
  // Fetch GitHub activity dynamically on page load
  async function loadGitHubActivity() {
    const container = document.getElementById('github-activity-content');
    if (!container) return;

    try {
      const response = await fetch(
        `https://api.github.com/users/${GITHUB_USERNAME}/events/public?per_page=10`,
        {
          headers: {
            'Accept': 'application/vnd.github+json',
            'X-GitHub-Api-Version': '2022-11-28',
          }
        }
      );

      if (!response.ok) {
        throw new Error(`GitHub API error: ${response.status}`);
      }

      const data = await response.json();

      // Filter for push events only
      const pushEvents = data.filter(event => event.type === 'PushEvent').slice(0, 5);

      if (pushEvents.length === 0) {
        container.innerHTML = `
          <p style="color: var(--color-text-muted);" class="text-sm italic">
            No recent activity
          </p>
        `;
        return;
      }

      // Build the HTML for events
      const eventsHTML = pushEvents.map(event => {
        const commits = event.payload.commits || [];
        const firstCommit = commits[0];
        const repoShortName = event.repo.name.split('/')[1] || event.repo.name;
        const formattedDate = formatDate(event.created_at);

        return `
          <div
            style="background: var(--color-bg-secondary); border: 1px solid var(--color-border);"
            class="p-4 rounded-lg hover:opacity-80 transition-opacity"
          >
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-4 h-4 flex-shrink-0" style="color: var(--color-accent);" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                  </svg>
                  <a
                    href="https://github.com/${event.repo.name}"
                    target="_blank"
                    rel="noopener noreferrer"
                    style="color: var(--color-accent);"
                    class="text-sm font-semibold hover:underline truncate"
                  >
                    ${repoShortName}
                  </a>
                </div>
                ${firstCommit ? `
                  <p style="color: var(--color-text);" class="text-sm leading-relaxed truncate">
                    ${firstCommit.message.split('\n')[0]}
                  </p>
                ` : ''}
                ${commits.length > 1 ? `
                  <p style="color: var(--color-text-muted);" class="text-xs mt-1">
                    +${commits.length - 1} more ${commits.length === 2 ? 'commit' : 'commits'}
                  </p>
                ` : ''}
              </div>
              <time
                style="color: var(--color-text-muted);"
                class="text-xs flex-shrink-0"
                datetime="${event.created_at}"
              >
                ${formattedDate}
              </time>
            </div>
          </div>
        `;
      }).join('');

      container.innerHTML = `<div class="space-y-3">${eventsHTML}</div>`;
    } catch (error) {
      console.error('Failed to load GitHub activity:', error);
      container.innerHTML = `
        <p style="color: var(--color-text-muted);" class="text-sm italic">
          Unable to load GitHub activity
        </p>
      `;
    }
  }

  function formatDate(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diffInMs = now.getTime() - date.getTime();
    const diffInHours = Math.floor(diffInMs / (1000 * 60 * 60));
    const diffInDays = Math.floor(diffInHours / 24);

    if (diffInHours < 1) {
      return 'Just now';
    } else if (diffInHours < 24) {
      return `${diffInHours}h ago`;
    } else if (diffInDays === 1) {
      return 'Yesterday';
    } else if (diffInDays < 7) {
      return `${diffInDays}d ago`;
    } else {
      return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
    }
  }

  // Load activity when page loads
  loadGitHubActivity();
</script>
