---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={project.data.title} description={project.data.description}>
  <article class="prose prose-lg dark:prose-invert max-w-none">
    <h1 style="color: var(--color-text-heading);">{project.data.title}</h1>

    <div style="color: var(--color-text-muted);" class="text-sm mb-8">
      Published {new Date(project.data.pubDate).toLocaleDateString('en-GB', {
        day: 'numeric',
        month: 'long',
        year: 'numeric'
      })}
    </div>

    <div style="color: var(--color-text);">
      <Content />
    </div>

    {project.data.tags && project.data.tags.length > 0 && (
      <div class="mt-12 pt-8 border-t" style="border-color: var(--color-border);">
        <div class="flex flex-wrap gap-2">
          {project.data.tags.map((tag) => (
            <span
              style="background: var(--color-bg-secondary); color: var(--color-accent); border: 1px solid var(--color-border);"
              class="px-3 py-1 rounded-full text-sm font-medium"
            >
              {tag}
            </span>
          ))}
        </div>
      </div>
    )}

    <div class="mt-8 pt-8 border-t" style="border-color: var(--color-border);">
      <a href="/projects" style="color: var(--color-accent);" class="inline-flex items-center gap-2 hover:opacity-70 transition-opacity">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to projects
      </a>
    </div>
  </article>

  <style>
    article :global(h1),
    article :global(h2),
    article :global(h3),
    article :global(h4),
    article :global(h5),
    article :global(h6) {
      color: var(--color-text-heading);
      font-family: 'Space Grotesk', sans-serif;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    article :global(h1) {
      margin-top: 0;
    }

    article :global(p) {
      color: var(--color-text);
      margin-bottom: 1.5rem;
      line-height: 1.8;
    }

    article :global(a) {
      color: var(--color-accent);
      text-decoration: underline;
      text-decoration-color: var(--color-accent-muted);
      text-underline-offset: 2px;
      transition: all 0.2s;
    }

    article :global(a:hover) {
      color: var(--color-accent-hover);
      text-decoration-color: var(--color-accent);
    }

    article :global(ul),
    article :global(ol) {
      margin-bottom: 1.5rem;
      padding-left: 1.5rem;
    }

    article :global(li) {
      margin-bottom: 0.5rem;
      line-height: 1.8;
    }

    article :global(code) {
      background-color: var(--color-surface);
      color: var(--color-accent-purple);
      padding: 0.2em 0.4em;
      border-radius: 4px;
      font-size: 0.9em;
    }

    article :global(pre) {
      background-color: var(--color-surface);
      padding: 1.5rem;
      border-radius: 8px;
      overflow-x: auto;
      margin-bottom: 1.5rem;
    }

    article :global(pre code) {
      background: none;
      padding: 0;
      font-size: 0.875rem;
      line-height: 1.6;
    }

    article :global(blockquote) {
      border-left: 4px solid var(--color-accent);
      padding-left: 1.5rem;
      margin: 1.5rem 0;
      font-style: italic;
      color: var(--color-text-secondary);
    }

    article :global(strong) {
      color: var(--color-text-heading);
      font-weight: 600;
    }

    article :global(table) {
      width: 100%;
      margin-bottom: 1.5rem;
      border-collapse: collapse;
    }

    article :global(th),
    article :global(td) {
      border: 1px solid var(--color-border);
      padding: 0.75rem;
      text-align: left;
    }

    article :global(th) {
      background-color: var(--color-surface);
      font-weight: 600;
    }
  </style>
</BaseLayout>
