---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { formatDate } from '../utils/formatDate';
import fs from 'fs';
import path from 'path';

const latestWriting = (await getCollection('writing'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

const latestNote = (await getCollection('notes'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

// Load hero images from manifest (generated by scripts/fetch-hero-images.mjs)
interface HeroImage {
  src: string;
  publicUrl: string;
  title: string;
  caption?: string;
  dateTaken?: string;
}
let heroImages: HeroImage[] = [];
const manifestPath = path.join(process.cwd(), 'src/data/hero-images.json');
if (fs.existsSync(manifestPath)) {
  heroImages = JSON.parse(fs.readFileSync(manifestPath, 'utf-8'));
}

// Fallback to static images if manifest doesn't exist
const fallbackImages: HeroImage[] = [
  { src: '/hero-1.png', publicUrl: '#', title: 'Hero 1' },
  { src: '/hero-2.png', publicUrl: '#', title: 'Hero 2' },
  { src: '/hero-3.png', publicUrl: '#', title: 'Hero 3' },
  { src: '/hero-4.png', publicUrl: '#', title: 'Hero 4' },
  { src: '/hero-5.png', publicUrl: '#', title: 'Hero 5' },
];

const images = heroImages.length > 0 ? heroImages : fallbackImages;
---

<BaseLayout
  title="Stephen McCullough"
  description="Software engineer and founder based in Northern Ireland"
>
  <div class="space-y-24">
    <!-- Hero Section - Animated placeholder images -->
    <section class="relative py-8 md:py-12 pb-16 md:pb-24">
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute top-0 -left-4 w-96 h-96 bg-gradient-to-br from-purple-400/20 via-pink-400/20 to-transparent rounded-full blur-3xl animate-blob"></div>
        <div class="absolute top-0 -right-4 w-96 h-96 bg-gradient-to-bl from-cyan-400/20 via-blue-400/20 to-transparent rounded-full blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-96 h-96 bg-gradient-to-tr from-pink-400/20 via-purple-400/20 to-transparent rounded-full blur-3xl animate-blob animation-delay-4000"></div>
      </div>

      <div class="relative">
        <h1 style="color: var(--color-text-heading);" class="text-5xl md:text-7xl font-bold tracking-tight mb-12 md:mb-16 text-center animate-fade-in-up">
          Stephen McCullough
        </h1>

        <!-- Animated hero images grid - randomised from the-mcculloughs.org slideshow -->
        <div id="hero-grid" class="relative grid grid-cols-3 md:grid-cols-5 gap-3 md:gap-6 max-w-4xl md:max-w-6xl mx-auto overflow-visible">
          {images.map((img, i) => (
            <a
              href={img.publicUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="hero-image group relative aspect-square rounded-2xl overflow-visible shadow-lg animate-float cursor-pointer hidden z-0 hover:z-50"
              style={`animation-delay: ${i * 200}ms; transform-style: preserve-3d; backface-visibility: hidden;`}
              style={`animation-delay: ${i * 200}ms;`}
              data-index={i}
            >
              <div class="w-full h-full rounded-2xl overflow-hidden transition-all duration-300 ease-out group-hover:scale-[2.5] group-hover:shadow-2xl">
                <img
                  src={img.src}
                  alt={img.title || 'Family photo'}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <!-- Overlay with info -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
                  {img.title && (
                    <p class="text-white/90 text-xs font-medium leading-tight truncate">{img.title}</p>
                  )}
                  {img.caption && (
                    <p class="text-white/70 text-[10px] mt-0.5 line-clamp-2">{img.caption}</p>
                  )}
                  {img.dateTaken && (
                    <p class="text-white/60 text-[10px] mt-1">{img.dateTaken}</p>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>

        <script>
          const grid = document.getElementById('hero-grid');
          const allImages = [...grid.querySelectorAll('.hero-image')];
          let visibleImages = [];
          let hiddenPool = [];
          let timers = [];

          // Determine count based on screen width
          function getVisibleCount() {
            return window.innerWidth < 768 ? 3 : 5;
          }

          // Random time between 5-10 seconds
          function getRandomDelay() {
            return 5000 + Math.random() * 5000;
          }

          // Shuffle array using Fisher-Yates
          function shuffle(arr) {
            const shuffled = [...arr];
            for (let i = shuffled.length - 1; i > 0; i--) {
              const j = Math.floor(Math.random() * (i + 1));
              [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
          }

          // Initialize the grid
          function initGrid() {
            // Clear existing timers
            timers.forEach(t => clearTimeout(t));
            timers = [];

            const count = getVisibleCount();
            const shuffled = shuffle(allImages);

            // Hide all first
            allImages.forEach(img => img.classList.add('hidden'));

            // Set visible and hidden pools
            visibleImages = shuffled.slice(0, count);
            hiddenPool = shuffled.slice(count);

            // Show visible images and start individual timers
            visibleImages.forEach((img, i) => {
              img.classList.remove('hidden');
              img.style.animationDelay = `${i * 200}ms`;
              scheduleRotation(i);
            });
          }

          // Schedule rotation for a specific slot
          function scheduleRotation(slotIndex) {
            const delay = getRandomDelay();
            const timer = setTimeout(() => {
              rotateSlot(slotIndex);
              scheduleRotation(slotIndex);
            }, delay);
            timers[slotIndex] = timer;
          }

          // Rotate a specific slot with vertical flip
          function rotateSlot(slotIndex) {
            if (hiddenPool.length === 0) return;

            const hiddenIndex = Math.floor(Math.random() * hiddenPool.length);
            const outgoing = visibleImages[slotIndex];
            const incoming = hiddenPool[hiddenIndex];

            // Random direction: flip from top (-1) or bottom (1)
            const direction = Math.random() > 0.5 ? 1 : -1;

            // Get position of outgoing image
            const rect = outgoing.getBoundingClientRect();
            const gridRect = grid.getBoundingClientRect();

            // Position incoming image exactly where outgoing is
            incoming.style.position = 'absolute';
            incoming.style.left = `${rect.left - gridRect.left}px`;
            incoming.style.top = `${rect.top - gridRect.top}px`;
            incoming.style.width = `${rect.width}px`;
            incoming.style.height = `${rect.height}px`;

            // Vertical flip animation (rotateX) - smoother timing
            outgoing.style.transition = 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
            outgoing.style.transform = `perspective(800px) rotateX(${direction * 90}deg)`;

            // Prepare incoming (start flipped from opposite side)
            incoming.classList.remove('hidden');
            incoming.style.transform = `perspective(800px) rotateX(${-direction * 90}deg)`;
            incoming.style.transition = 'none';

            setTimeout(() => {
              // Hide outgoing, flip in incoming
              outgoing.classList.add('hidden');
              outgoing.style.transition = '';
              outgoing.style.transform = '';

              incoming.style.transition = 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
              incoming.style.transform = 'perspective(800px) rotateX(0deg)';

              // Swap in arrays
              visibleImages[slotIndex] = incoming;
              hiddenPool[hiddenIndex] = outgoing;

              // Clean up positioning after animation
              setTimeout(() => {
                incoming.style.position = '';
                incoming.style.left = '';
                incoming.style.top = '';
                incoming.style.width = '';
                incoming.style.height = '';
                incoming.style.transform = '';
                incoming.style.transition = '';
              }, 600);
            }, 600);
          }

          // Handle resize
          let resizeTimeout;
          window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(initGrid, 250);
          });

          // Initialize
          initGrid();
        </script>
      </div>
    </section>

    <!-- Latest Content Cards - Animated and Moving -->
    <section class="max-w-6xl mx-auto">
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Latest Writing -->
        {latestWriting && (
          <a href={`/writing/${latestWriting.slug}`} class="card group block hover-lift-dramatic animate-slide-in-left relative overflow-hidden" style="animation-delay: 0ms;">
            <!-- Ribbon overlay - top left -->
            <div class="absolute top-0 left-0 ribbon-top-left">
              <span style="background: var(--color-accent-blue); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
                Writing
              </span>
            </div>

            <div class="space-y-4">
              <!-- Big centered icon -->
              <div class="flex justify-center mb-6 mt-8">
                <div class="w-20 h-20 rounded-full bg-gradient-to-br from-cyan-400/30 to-blue-400/30 flex items-center justify-center group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                  <svg class="w-10 h-10" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              </div>
              <h3 style="color: var(--color-text-heading);" class="text-lg font-bold leading-tight">
                {latestWriting.data.title}
              </h3>
              <p style="color: var(--color-text-secondary);" class="text-sm leading-relaxed line-clamp-3">
                {latestWriting.data.description}
              </p>
              <div class="flex items-center justify-between pt-3 border-t" style="border-color: var(--color-border);">
                <time style="color: var(--color-text-muted);" class="text-xs" datetime={latestWriting.data.pubDate.toISOString()}>
                  {formatDate(latestWriting.data.pubDate)}
                </time>
                <span style="color: var(--color-accent);" class="text-xs font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                  Read more
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        )}

        <!-- Latest Note -->
        {latestNote && (async () => {
          const { remarkPluginFrontmatter } = await latestNote.render();
          const excerpt = latestNote.body.split('\n\n')[0].replace(/^##\s+.*$/m, '').trim().substring(0, 150);
          return (
            <a href={`/notes/${latestNote.slug}`} class="card group block hover-lift-dramatic animate-slide-in-left relative overflow-hidden" style="animation-delay: 150ms;">
              <!-- Ribbon overlay - top left -->
              <div class="absolute top-0 left-0 ribbon-top-left">
                <span style="background: var(--color-accent); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
                  Notes
                </span>
              </div>

              <div class="space-y-4">
                <!-- Big centered icon -->
                <div class="flex justify-center mb-6 mt-8">
                  <div class="w-20 h-20 rounded-full bg-gradient-to-br from-pink-400/30 to-purple-400/30 flex items-center justify-center group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                    <svg class="w-10 h-10" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                </div>
                <h3 style="color: var(--color-text-heading);" class="text-lg font-bold leading-tight">
                  {latestNote.data.title}
                </h3>
                <p style="color: var(--color-text-secondary);" class="text-sm leading-relaxed line-clamp-3">
                  {excerpt}...
                </p>
                {latestNote.data.tags && latestNote.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {latestNote.data.tags.slice(0, 3).map((tag) => (
                      <span style="background: var(--color-bg-secondary); color: var(--color-accent); border: 1px solid var(--color-border);" class="px-2 py-0.5 rounded text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                <div class="flex items-center justify-between pt-3 border-t" style="border-color: var(--color-border);">
                  <time style="color: var(--color-text-muted);" class="text-xs" datetime={latestNote.data.pubDate.toISOString()}>
                    {formatDate(latestNote.data.pubDate)}
                  </time>
                  <span style="color: var(--color-accent);" class="text-xs font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                    Read more
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          );
        })()}
      </div>
    </section>
  </div>
</BaseLayout>
