---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { formatDate } from '../utils/formatDate';

const latestBlogPost = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

const latestThought = (await getCollection('thoughts'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];

const latestNote = (await getCollection('notes'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];
---

<BaseLayout
  title="Stephen McCullough"
  description="Software engineer and founder based in Northern Ireland"
>
  <div class="space-y-24">
    <!-- Hero Section - Animated placeholder images -->
    <section class="relative py-8 md:py-12 overflow-hidden">
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute top-0 -left-4 w-96 h-96 bg-gradient-to-br from-purple-400/20 via-pink-400/20 to-transparent rounded-full blur-3xl animate-blob"></div>
        <div class="absolute top-0 -right-4 w-96 h-96 bg-gradient-to-bl from-cyan-400/20 via-blue-400/20 to-transparent rounded-full blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-96 h-96 bg-gradient-to-tr from-pink-400/20 via-purple-400/20 to-transparent rounded-full blur-3xl animate-blob animation-delay-4000"></div>
      </div>

      <div class="relative">
        <h1 style="color: var(--color-text-heading);" class="text-5xl md:text-7xl font-bold tracking-tight mb-12 md:mb-16 text-center animate-fade-in-up">
          Stephen McCullough
        </h1>

        <!-- Animated placeholder images grid -->
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 md:gap-6 max-w-6xl mx-auto">
          <div class="aspect-square rounded-2xl overflow-hidden shadow-lg animate-float" style="animation-delay: 0ms;">
            <div class="w-full h-full bg-gradient-to-br from-purple-400/30 to-pink-400/30 flex items-center justify-center backdrop-blur-sm" style="border: 2px solid var(--color-border);">
              <span style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600;">IMAGE 1</span>
            </div>
          </div>

          <div class="aspect-square rounded-2xl overflow-hidden shadow-lg animate-float" style="animation-delay: 200ms;">
            <div class="w-full h-full bg-gradient-to-br from-cyan-400/30 to-blue-400/30 flex items-center justify-center backdrop-blur-sm" style="border: 2px solid var(--color-border);">
              <span style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600;">IMAGE 2</span>
            </div>
          </div>

          <div class="aspect-square rounded-2xl overflow-hidden shadow-lg animate-float" style="animation-delay: 400ms;">
            <div class="w-full h-full bg-gradient-to-br from-pink-400/30 to-purple-400/30 flex items-center justify-center backdrop-blur-sm" style="border: 2px solid var(--color-border);">
              <span style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600;">IMAGE 3</span>
            </div>
          </div>

          <div class="aspect-square rounded-2xl overflow-hidden shadow-lg animate-float" style="animation-delay: 600ms;">
            <div class="w-full h-full bg-gradient-to-br from-blue-400/30 to-cyan-400/30 flex items-center justify-center backdrop-blur-sm" style="border: 2px solid var(--color-border);">
              <span style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600;">IMAGE 4</span>
            </div>
          </div>

          <div class="aspect-square rounded-2xl overflow-hidden shadow-lg animate-float" style="animation-delay: 800ms;">
            <div class="w-full h-full bg-gradient-to-br from-purple-400/30 to-cyan-400/30 flex items-center justify-center backdrop-blur-sm" style="border: 2px solid var(--color-border);">
              <span style="color: var(--color-text-muted); font-size: 0.875rem; font-weight: 600;">IMAGE 5</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Content Cards - Animated and Moving -->
    <section class="max-w-6xl mx-auto">
      <div class="grid gap-8 md:grid-cols-3">
        <!-- Latest Thought -->
        {latestThought && (async () => {
          const { Content } = await latestThought.render();
          return (
            <a href="/thoughts" class="card group block hover-lift-dramatic animate-slide-in-left relative overflow-hidden" style="animation-delay: 0ms;">
              <!-- Ribbon overlay - top left -->
              <div class="absolute top-0 left-0 ribbon-top-left">
                <span style="background: var(--color-accent-purple); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
                  Thoughts
                </span>
              </div>

              <div class="space-y-4">
                <!-- Big centered icon -->
                <div class="flex justify-center mb-6 mt-8">
                  <div class="w-20 h-20 rounded-full bg-gradient-to-br from-purple-400/30 to-pink-400/30 flex items-center justify-center group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                    <svg class="w-10 h-10" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                  </div>
                </div>
                <div style="color: var(--color-text); font-size: 0.9375rem; line-height: 1.6;" class="prose prose-sm dark:prose-invert max-w-none">
                  <Content />
                </div>
                <div class="flex items-center justify-between pt-3 border-t" style="border-color: var(--color-border);">
                  <time style="color: var(--color-text-muted);" class="text-xs" datetime={latestThought.data.pubDate.toISOString()}>
                    {formatDate(latestThought.data.pubDate)}
                  </time>
                  <span style="color: var(--color-accent);" class="text-xs font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                    View all
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          );
        })()}

        <!-- Latest Blog Post -->
        {latestBlogPost && (
          <a href={`/blog/${latestBlogPost.slug}`} class="card group block hover-lift-dramatic animate-slide-in-left relative overflow-hidden" style="animation-delay: 150ms;">
            <!-- Ribbon overlay - top left -->
            <div class="absolute top-0 left-0 ribbon-top-left">
              <span style="background: var(--color-accent-blue); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
                Blog
              </span>
            </div>

            <div class="space-y-4">
              <!-- Big centered icon -->
              <div class="flex justify-center mb-6 mt-8">
                <div class="w-20 h-20 rounded-full bg-gradient-to-br from-cyan-400/30 to-blue-400/30 flex items-center justify-center group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                  <svg class="w-10 h-10" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              </div>
              <h3 style="color: var(--color-text-heading);" class="text-lg font-bold leading-tight">
                {latestBlogPost.data.title}
              </h3>
              <p style="color: var(--color-text-secondary);" class="text-sm leading-relaxed line-clamp-3">
                {latestBlogPost.data.description}
              </p>
              <div class="flex items-center justify-between pt-3 border-t" style="border-color: var(--color-border);">
                <time style="color: var(--color-text-muted);" class="text-xs" datetime={latestBlogPost.data.pubDate.toISOString()}>
                  {formatDate(latestBlogPost.data.pubDate)}
                </time>
                <span style="color: var(--color-accent);" class="text-xs font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                  Read more
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        )}

        <!-- Latest Note -->
        {latestNote && (
          <a href={`/notes/${latestNote.slug}`} class="card group block hover-lift-dramatic animate-slide-in-left relative overflow-hidden" style="animation-delay: 300ms;">
            <!-- Ribbon overlay - top left -->
            <div class="absolute top-0 left-0 ribbon-top-left">
              <span style="background: var(--color-accent); color: white;" class="px-4 py-2 text-xs font-black uppercase tracking-wider shadow-lg">
                Notes
              </span>
            </div>

            <div class="space-y-4">
              <!-- Big centered icon -->
              <div class="flex justify-center mb-6 mt-8">
                <div class="w-20 h-20 rounded-full bg-gradient-to-br from-pink-400/30 to-purple-400/30 flex items-center justify-center group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                  <svg class="w-10 h-10" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              </div>
              <h3 style="color: var(--color-text-heading);" class="text-lg font-bold leading-tight">
                {latestNote.data.title}
              </h3>
              {latestNote.data.tags && latestNote.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {latestNote.data.tags.slice(0, 3).map((tag) => (
                    <span style="background: var(--color-bg-secondary); color: var(--color-accent); border: 1px solid var(--color-border);" class="px-2 py-0.5 rounded text-xs font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
              <div class="flex items-center justify-between pt-3 border-t" style="border-color: var(--color-border);">
                <time style="color: var(--color-text-muted);" class="text-xs" datetime={latestNote.data.pubDate.toISOString()}>
                  {formatDate(latestNote.data.pubDate)}
                </time>
                <span style="color: var(--color-accent);" class="text-xs font-semibold inline-flex items-center gap-1 group-hover:gap-2 transition-all">
                  Read more
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        )}
      </div>
    </section>
  </div>
</BaseLayout>
